<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#006600">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/altura_carta"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">


        <com.example.murilo.jogopaciencia.Deck
            android:id="@+id/deck"
            android:layout_width="@dimen/largura_carta"
            android:layout_height="@dimen/altura_carta"
            android:padding="1dp"
            android:layout_margin="2dp"/>

        <com.example.murilo.jogopaciencia.PilhaAberta
            android:id="@+id/open"
            android:layout_width="@dimen/largura_carta"
            android:layout_height="@dimen/altura_carta"
            android:padding="1dp"
            android:layout_margin="2dp" />

        <ImageView
            android:id="@+id/null_img"
            android:layout_width="@dimen/largura_carta"
            android:layout_height="@dimen/altura_carta"
            android:padding="1dp"
            android:layout_margin="2dp"
            android:src="@null"/>

        <LinearLayout
            android:id="@+id/montesLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/altura_carta"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <com.example.murilo.jogopaciencia.Monte
                android:id="@+id/sol1"
                android:layout_width="@dimen/largura_carta"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:layout_margin="2dp"/>

            <com.example.murilo.jogopaciencia.Monte
                android:id="@+id/sol2"
                android:layout_width="@dimen/largura_carta"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:layout_margin="2dp"/>

            <com.example.murilo.jogopaciencia.Monte
                android:id="@+id/sol3"
                android:layout_width="@dimen/largura_carta"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:layout_margin="2dp"/>

            <com.example.murilo.jogopaciencia.Monte
                android:id="@+id/sol4"
                android:layout_width="@dimen/largura_carta"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:layout_margin="2dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margem_layouts"
        android:layout_gravity="center_horizontal">

        <com.example.murilo.jogopaciencia.Coluna
            android:id="@+id/col1"
            android:layout_width="@dimen/largura_carta"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center_horizontal" />

        <com.example.murilo.jogopaciencia.Coluna
            android:id="@+id/col2"
            android:layout_width="@dimen/largura_carta"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center_horizontal" />

        <com.example.murilo.jogopaciencia.Coluna
            android:id="@+id/col3"
            android:layout_width="@dimen/largura_carta"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center_horizontal" />

        <com.example.murilo.jogopaciencia.Coluna
            android:id="@+id/col4"
            android:layout_width="@dimen/largura_carta"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center_horizontal" />

        <com.example.murilo.jogopaciencia.Coluna
            android:id="@+id/col5"
            android:layout_width="@dimen/largura_carta"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center_horizontal" />

        <com.example.murilo.jogopaciencia.Coluna
            android:id="@+id/col6"
            android:layout_width="@dimen/largura_carta"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center_horizontal" />

        <com.example.murilo.jogopaciencia.Coluna
            android:id="@+id/col7"
            android:layout_width="@dimen/largura_carta"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_novoJogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Jogo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tx_venceu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bt_novoJogo"
            android:paddingBottom="18dp"
            android:text="PARABÉNS VOCÊ VENCEU !!"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

    </RelativeLayout>

</LinearLayout>
